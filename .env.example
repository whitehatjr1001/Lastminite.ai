OPENAI_API_KEY=your-openai-api-key-here

GEMINI_API_KEY=your-gemini-api-key-here
# Model selection
# Use GPTâ€‘4o for text (and vision understanding) via Responses API
OPENAI_TEXT_MODEL=gpt-4o
# Use DALL-E 3 for image generation (recommended path)
OPENAI_IMAGE_MODEL=dall-e-3
TALVIY_API_KEY=your-talviy-api-key-here
# Image generation defaults (can override per call)
# Supported sizes commonly include 1024x1024, 1024x1536, 1536x1024
OPENAI_IMAGE_SIZE=1024x1024
# Fidelity vs speed tradeoff: low | medium | high
OPENAI_IMAGE_QUALITY=high
# PNG transparency control: transparent | opaque
OPENAI_IMAGE_BACKGROUND=transparent
# Cap images per call to avoid latency spikes
OPENAI_IMAGE_MAX_N=2

# Latency targets
OPENAI_TARGET_SECONDS=30
